<div class="col-sm-6">

    <h2>Burgers to Eat!</h2>

    <ul>
        {{#each burgers}}
            {{#unless devoured}}
                {{> burgers/burger-block devoured=true}}
            {{/unless}}
        {{/each}}
    </ul>

</div>

<div class="col-sm-6">

    <h2>Eaten Burgers!</h2>

    <ul>
        {{#each burgers}}
            {{#if devoured}}
                {{> burgers/burger-block devoured=false}}
            {{/if}}
        {{/each}}
    </ul>

</div>